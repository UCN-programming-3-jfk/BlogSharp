<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogSharp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="bg-primary mb-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-0">
            <div class="container">
                @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Home</a> *@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Authors" asp-action="Create"><i class="fa fa-user"></i> Create new profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="BlogPosts" asp-action="Create">Write new blog post</a>
                        </li>
                        <li class="nav-item">
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link " asp-area="" asp-controller="Account" asp-action="LogOut">Log out</a>
                            }
                            else
                            {
                                <a class="nav-link " asp-area="" asp-controller="Account" asp-action="LogIn">Log in</a>
                            }
                        </li>
                    </ul>
                        <form class="form-inline my-2 my-lg-0" method="get" action="/">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search blogposts" aria-label="Blogposts search box" name="searchstring">
                            <button class="btn btn-success" type="submit">Search</button>
                        </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid d-flex justify-content-center" style="background-color:aqua; margin-top: 0;"><span>@TempData["Message"]</span></div>
    <p></p>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-primary">
        <div class="container text-center" style="color:lightskyblue">
            <i><a href="https://github.com/UCN-programming-3-jfk/BlogSharp" style="color:white"> BlogSharp <img src="/images/GitHub-Mark-20px.png" /></a> is a simple blog engine created as a learning project.</i>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
